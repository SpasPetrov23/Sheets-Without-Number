@model CharacterDetailsModel

@{
    if (Model.OwnerId != Model.UserId && Model.Game.GameMasterId != Model.UserId && !User.IsAdmin())
    {
        ViewBag.DisabledButton = "disabled";
        ViewBag.ButtonColor = "btn-secondary";
    }
    else
    {
        ViewBag.DisabledButton = string.Empty;
        ViewBag.ButtonColor = "btn-info";
    }
}

<div class="d-flex">
    <div class="col-3">
        <img src="@Model.CharacterImage" class="img-thumbnail" alt="Character Image" style="height: 320px; object-fit: cover">
        <a asp-controller="Characters" asp-action="Edit" asp-route-characterId="@Model.Id" class="text-decoration-none">
            <div class="text-center">
                <input type="button" class="btn btn-block @ViewBag.ButtonColor" @ViewBag.DisabledButton value="Edit" />
            </div>
        </a>
    </div>

    <div class="col-9">
        <div class="card" style="border: 1px solid #dee2e6; padding:0.80rem">
            <div class="d-flex justify-content-between">
                <h2>@Model.Name [Level @Model.Level]</h2>
                <small><b>Game:</b> <a asp-controller="Games" asp-action="Details" asp-route-gameId="@Model.GameId">@Model.Game.Name</a></small>
            </div>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: @Model.XPBarWidth@Html.Raw("%"); background-color: mediumpurple" aria-valuenow="@Model.CurrentXP" aria-valuemin="@Model.MinimumXP" aria-valuemax="@Model.MaximumXP"><span class="text-dark">@Model.XPBarWidth% (@Model.CurrentXP / @Model.MaximumXP)</span></div>
            </div>
        </div>

        <br />

        <div class="d-flex">
            <div class="col-10" style="padding-left:0px; padding-right:7.5px">
                <div class="table table-responsive">
                    <table class="table table-bordered">
                        <tbody>
                            <tr class="text-center" style="background-color: lightblue">
                                <td><b>Species</b></td>
                                <td><b>Homeworld</b></td>
                                <td><b>Class</b></td>
                                <td><b>Background</b></td>
                            </tr>
                            <tr class="text-center">
                                <td>@Model.Species</td>
                                <td>@Model.Homeworld</td>
                                <td>@Model.Class</td>
                                <td>@Model.Background</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="table-sm table-responsive">
                    <table class="table table-bordered">
                        <tbody>
                            <tr class="text-center" style="background-color: lightblue">
                                <td><b>Hit Points</b></td>
                                <td><b>Effort</b></td>
                                <td><b>System Strain</b></td>
                            </tr>
                            <tr class="text-center">
                                <td>@Model.HitPoints / @Model.MaxHitPoints</td>
                                <td>@Model.Effort</td>
                                <td>@Model.SystemStrain / @Model.MaxSystemStrain</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-2" style="padding-left:7.5px; padding-right:0px">
                <div class="table table-responsive">
                    <table class="table table-bordered">
                        <tbody>
                            <tr class="text-center" style="background-color: lightblue">
                                <td colspan="2"><b>Saving Throws</b></td>
                            </tr>
                            <tr class="text-center">
                                <td>Physical</td>
                                <td>@Model.SavingThrowPhysical</td>
                            </tr>
                            <tr class="text-center">
                                <td>Mental</td>
                                <td>@Model.SavingThrowMental</td>
                            </tr>
                            <tr class="text-center">
                                <td>Evasion</td>
                                <td>@Model.SavingThrowEvasion</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-flex" style="margin-top:20px">
    <div class="col-3">
        <partial name="_CharacterAttributesView" model="@Model" />

        <partial name="_CharacterCombatStatsView" model="@Model" />
    </div>
    <div class="col-9">
        <div class="d-flex">
            <div class="col-6" style="padding-left:0px; padding-right:7.5px">
                <div class="table-sm table-responsive">
                    <table class="table table-hover table-bordered">
                        <tbody>
                            <tr class="text-center" style="background-color: lightblue">
                                <td><b>Skills</b></td>
                                <td class="col-1"><b>Level</b></td>
                            </tr>
                            @if (Model.CharactersSkills.Any(cs => cs.CharacterId == Model.Id))
                            {
                                @foreach (var characterSkill in @Model.CharactersSkills.Where(cs => cs.CharacterId == Model.Id))
                                {
                                    <tr class="text-center">
                                        <td>
                                            <a asp-controller="Skills" asp-action="Edit" asp-route-characterSkillId="@characterSkill.Id" class="text-decoration-none">
                                                @characterSkill.SkillName
                                            </a>
                                        </td>
                                        <td>@characterSkill.SkillLevel</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr class="text-center">
                                    <td>No skills selected</td>
                                    <td>N/A</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a asp-controller="Skills" asp-action="Add" asp-route-characterId="@Model.Id" class="text-decoration-none">
                    <div class="text-center">
                        <input type="button" class="btn btn-block @ViewBag.ButtonColor" @ViewBag.DisabledButton value="Add" />
                    </div>
                </a>
            </div>
            <div class="col-6" style="padding-left:7.5px; padding-right:0px">
                <div class="table-sm table-responsive">
                    <table class="table table-bordered">
                        <tbody>
                            <tr class="text-center" style="background-color: lightblue">
                                <td><b>Foci</b></td>
                                <td class="col-1"><b>Level</b></td>
                            </tr>
                            <tr class="text-center">
                                <td>@Model.HitPoints / @Model.MaxHitPoints</td>
                                <td>@Model.Effort</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <a asp-controller="Skills" asp-action="Edit" asp-route-characterId="@Model.Id" class="text-decoration-none">
                    <div class="text-center">
                        <input type="button" class="btn btn-block @ViewBag.ButtonColor" @ViewBag.DisabledButton value="Edit" />
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="d-flex" style="margin-top:20px">
    <div class="col-4">
        <div class="card" style="height: 400px; margin-bottom: 20px">
        </div>
        <div class="card" style="height: 200px; margin-bottom: 20px">
        </div>
    </div>
    <div class="col-8">
        <div class="d-flex flex-row" style="height: 300px; margin-bottom: 20px">
            <div class="card" style="margin-right:20px; width: 200px; height: 300px"></div>
            <div class="card flex-grow-1" style="height: 300px"></div>
        </div>
        <div class="card" style="height: 120px; margin-bottom: 20px">
        </div>
        <div class="card" style="height: 160px;">
        </div>
    </div>
</div>

<div class="card" style="height: 300px">

</div>
