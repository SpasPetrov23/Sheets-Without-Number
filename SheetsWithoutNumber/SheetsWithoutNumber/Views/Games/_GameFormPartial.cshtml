@model GameFormModel

<div class="row">
    <div class="col-12">
        <form method="post">
            <div class="form-group col-8 offset-2">
                <div class="form-row">
                    <div class="form-group col-10">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control form-control" placeholder="Choose a name for your game" />
                        <span asp-validation-for="Name" class="small text-danger"></span>
                    </div>
                    <div class="form-group col-2">
                        <label asp-for="PlayersMax"></label>
                        <select asp-for="PlayersMax" class="form-control">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                        </select>
                        <span asp-validation-for="PlayersMax" class="small text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group col-8 offset-2">
                <label asp-for="GameImage"></label>
                <input asp-for="GameImage" class="form-control form-control" placeholder="Enter an image url that best depicts your game" />
                <span asp-validation-for="GameImage" class="small text-danger"></span>
            </div>
            <div class="form-group col-8 offset-2">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="8" placeholder="Describe the setting of your game"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>

            <div class="container col-3 text-danger text-left">
                <div asp-validation-summary="ModelOnly"></div>
            </div>

            <div class="col-12 text-center">
                <input class="btn btn-primary" style="width: 120px" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>