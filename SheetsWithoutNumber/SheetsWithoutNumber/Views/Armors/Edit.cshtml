@model ArmorFormModel

<div class="row">
    <div class="col-12">
        <form method="post">
            <div class="form-group col-8 offset-2">
                <div class="form-row">
                    <div class="form-group col-9">
                        <label asp-for="ArmorId">Name</label>
                        <select asp-for="ArmorId" class="form-control">
                            @foreach (var armor in Model.Armors)
                            {
                <option value="@armor.Id">@armor.Name</option>
}
                        </select>
                        <span asp-validation-for="ArmorId" class="small text-danger"></span>
                    </div>
                    <div class="form-group col-2">
                        <label asp-for="Location">Location</label>
                        <select asp-for="Location" class="form-control">
                            <option>Stowed</option>
                            <option>Backpack</option>
                            <option>Readied</option>
                            <option>Ship</option>
                        </select>
                        <span asp-validation-for="Location" class="small text-danger"></span>
                    </div>
                    <div class="form-group col-1">
                        <label>Delete</label>
                        <a asp-controller="Armors" asp-action="Delete" asp-route-characterArmorId="@Model.CharacterArmorId" class="text-decoration-none">
                            <div class="text-center">
                                <input type="button" class="btn-danger" value="X" />
                            </div>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-12 text-center">
                <input class="btn btn-primary" style="width: 120px" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}