@model RegisterFormModel

@{
    ViewData["Title"] = "Register";
}

<form method="post">
    <div class="text-center">
        <h1 class="display-4">Register</h1>
        <p>Please fill in this form to create an account.</p>

        <hr class="col-3">

        <div class="container col-3">
            <div class="form-group">
                <label asp-for="Username"></label> <br />
                <input asp-for="Username" class="form-control form-control" placeholder="Enter Username"> <br />
                <span asp-validation-for="Username" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label> <br />
                <input asp-for="Email" class="form-control form-control" placeholder="Enter Email"> <br />
                <span asp-validation-for="Email" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label> <br />
                <input asp-for="Password" type="password" class="form-control form-control" placeholder="Enter Password"> <br />
                <span asp-validation-for="Password" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label> <br />
                <input asp-for="ConfirmPassword" type="password" class="form-control form-control" placeholder="Confirm Password"> <br />
                <span asp-validation-for="ConfirmPassword" class="small text-danger"></span>
            </div>
        </div>
        <div class="text-left container col-3 text-danger">
            <div asp-validation-summary="ModelOnly"></div>
        </div>

        <hr class="col-3">

        <input class="btn btn-primary" style="width: 120px" type="submit" value="Register" />
        <div class="container signin">
            <p>Already have an account? <a asp-area="" asp-controller="Users" asp-action="Login">Sign in</a>.</p>
        </div>
    </div>
</form>