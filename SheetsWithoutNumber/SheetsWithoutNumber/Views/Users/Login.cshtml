@model LoginFormModel

@{ ViewData["Title"] = "Register"; }

<form method="post">
    <div class="text-center">
        <h1 class="display-4">Login</h1>
        <p>Please fill in this form to create an account.</p>

        <hr class="col-3">

        <div class="container col-3">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control form-control" placeholder="Enter Email">
                <span asp-validation-for="Email" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label> <br />
                <input asp-for="Password" type="password" class="form-control form-control" placeholder="Enter Password"> <br />
                <span asp-validation-for="Password" class="small text-danger"></span>
            </div>
        </div>
        <div class="text-left container col-3 text-danger">
            <div asp-validation-summary="ModelOnly"></div>
        </div>

        <hr class="col-3">

        <input class="btn btn-primary" style="width: 120px" type="submit" value="Login" />
    </div>
</form>